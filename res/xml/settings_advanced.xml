<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory android:title="@string/opt_category_directories">

        <com.reco1l.osu.ui.InputPreference
            android:key="corePath"
            android:summary="@string/opt_corepath_summary"
            android:title="@string/opt_corepath_title" />

        <com.reco1l.osu.ui.InputPreference
            android:key="skinTopPath"
            android:summary="@string/opt_skin_top_path_summary"
            android:title="@string/opt_skin_top_path_title" />

        <com.reco1l.osu.ui.InputPreference
            android:defaultValue="/sdcard/osu!droid/Songs"
            android:key="directory"
            android:summary="@string/opt_directory_summary"
            android:title="@string/opt_directory_title"
            app:layout="@layout/settings_preference_input_bottom" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/opt_category_miscellaneous">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="forceMaxRefreshRate"
            android:summary="@string/opt_force_max_refresh_rate_summary"
            android:title="@string/opt_force_max_refresh_rate_title"
            app:layout="@layout/settings_preference_checkbox" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="safebeatmapbg"
            android:summary="@string/opt_safe_beatmap_bg_summary"
            android:title="@string/opt_safe_beatmap_bg_title"
            app:layout="@layout/settings_preference_checkbox_bottom" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>