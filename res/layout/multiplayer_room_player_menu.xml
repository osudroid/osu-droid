<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frg_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fullLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="#1E1E2E"
        android:divider="@drawable/divider"
        android:minWidth="250dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/room_player"
            style="@style/settings_tab_divider"
            android:paddingVertical="12dp"
            android:text="Player" />

        <Button
            android:id="@+id/room_profile"
            style="@style/button_borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/account_box_24px"
            android:text="Visit profile" />

        <Button
            android:id="@+id/room_mute"
            style="@style/button_borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/volume_off_24px"
            android:text="Mute" />

        <Button
            android:id="@+id/room_host"
            style="@style/button_borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/crown_24px"
            android:text="Make room host" />

        <Button
            android:id="@+id/room_kick"
            style="@style/button_borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person_remove_24px"
            app:drawableTint="#FFBFBF"
            android:text="Kick"
            android:textColor="#FFBFBF" />

    </LinearLayout>

</RelativeLayout>